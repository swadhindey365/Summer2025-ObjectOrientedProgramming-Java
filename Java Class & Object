package swadhin;
class Person {

    String name;
    int age;

    void sayHello() {
        System.out.println("Hello! My name is " + name + " and I am " + age + " years old.");
    }
}

public class Swadhin {
    public static void main(String[] args) {

        Person p = new Person();

        p.name = "Swadhin";
        p.age = 21;
        p.sayHello();
    }
}

